{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*",
    "frontend",
    "backend",
    "cli",
    "devops"
  ],
  "devDependencies": {
    "cz-conventional-changelog": "^3.0.2",
    "husky": "^4.0.10",
    "lerna": "^3.20.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test",
      "pre-push": "yarn test",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  }
}
