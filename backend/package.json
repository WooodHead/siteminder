{
  "name": "nest-serverless-demo",
  "version": "1.0.0",
  "description": "Nest TypeScript demo with Serverless framework",
  "license": "MIT",
  "scripts": {
    "---@build---": "-----------------",
    "install:tools": "npm i -g serverless",
    "build": "tsc -p tsconfig.build.json",
    "---@start---": "-----------------",
    "start": "ts-node src/main",
    "start:dev": "ts-node-dev --respawn --watch --clear src/main",
    "prestart:prod": "yarn run build",
    "start:prod": "node dist/main.js",
    "start:docker": "docker-compose up",
    "---@tests---": "-----------------",
    "test": "jest --passWithNoTests",
    "test:unit": "echo \"todo\"",
    "test:e2e": "jest --config ./e2e/jest.e2e.json",
    "---@deploy---": "-----------------",
    "deploy": "sls deploy",
    "deploy:offline": "sls offline",
    "deploy:destroy": "sls remove"
  },
  "dependencies": {
    "@nestjs/common": "6.2.2",
    "@nestjs/core": "6.2.2",
    "@nestjs/platform-express": "6.2.2",
    "aws-serverless-express": "^3.3.5",
    "pg": "^7.11.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "^2.6.2",
    "rxjs": "6.5.2",
    "typescript": "3.4.5"
  },
  "devDependencies": {
    "@hewmen/serverless-plugin-typescript": "^1.1.17",
    "@nestjs/testing": "^6.10.14",
    "@types/aws-lambda": "^8.10.15",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.1",
    "@types/node": "7.10.6",
    "@types/supertest": "^2.0.5",
    "jest": "^23.5.0",
    "node-mocks-http": "^1.8.1",
    "nodemon": "^1.18.3",
    "prettier": "^1.14.2",
    "serverless-offline": "^3.31.3",
    "serverless-plugin-optimize": "^4.0.2-rc.1",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.5.0",
    "tslint": "5.11.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
